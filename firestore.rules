rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Usernames collection: allow reads for checking uniqueness, but only logged-in users can create one for themselves.
    match /usernames/{username} {
      allow read;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.uid == request.auth.uid;
    }
    
    // User profile documents: allow public reads, but only the owner can write.
    match /users/{userId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // User's links subcollection: allow public reads, but only the owner can write.
      match /links/{linkId} {
        allow read;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}