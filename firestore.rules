
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read of user profiles
    match /users/{userId} {
      allow read: if true;
    }
    
    // Allow public read of usernames
    match /usernames/{username} {
        allow read: if true;
    }

    // Allow public read of links
    match /users/{userId}/links/{linkId} {
      allow read: if true;
      // Allow anyone to update *only* the 'clicks' field.
      // This is safe because they can only increment the count, not set it to an arbitrary value.
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['clicks']);
    }
  }
}
