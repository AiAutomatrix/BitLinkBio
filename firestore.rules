rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write to their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can read and write to their own links subcollection
    match /users/{userId}/links/{linkId} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public read for usernames to check for availability and for public profiles
    match /usernames/{username} {
        allow read;
        allow write: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }
  }
}