rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /usernames/{username} {
      // Allow anyone to read usernames to check for availability.
      allow read;
      // Allow users to create their own username document.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      // Allow users to delete their own old username document.
      allow delete: if request.auth != null && get(/databases/$(database)/documents/usernames/$(username)).data.uid == request.auth.uid;
    }

    match /users/{userId} {
      // Allow public read for profile pages.
      allow read; 
      // Allow users to write only to their own document.
      allow write: if request.auth != null && request.auth.uid == userId;

      match /links/{linkId} {
        // Allow public read for profile pages.
        allow read;
        // Allow users to write only to their own links.
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}